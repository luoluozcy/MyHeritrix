        function swfBtn(x){
            if(x=='pc'){
                $('.ipadSwfBtn').hide();
                $('.pcSwfBtn').show();    
            }else if(x=='ipad'){
                $('.ipadSwfBtn').show();
                $('.pcSwfBtn').hide();
            }
        }

        function thisMovie(movieName) {
            if (navigator.appName.indexOf("Microsoft") != -1) {
                return window[movieName];
            } else {
                return document[movieName];
            }
        }

        function callFlash(v) {
            thisMovie("regFlash").dogame(v);
        }
</script>
